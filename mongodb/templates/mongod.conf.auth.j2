systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# Where and how to store data.
storage:
  dbPath: /var/lib/mongo

# how the process runs
processManagement:
  timeZoneInfo: /usr/share/zoneinfo

# network interfaces
net:
  port: {{ mongo_port  }}
  bindIp: {{ ansible_host }} 

security:
  authorization: enabled
  keyFile: {{ mongo_keyfile_path }}
#operationProfiling:

replication:
  replSetName: {{ mongo_replicaset }}

